<div class="mt-4">
  <div class="card-columns">
    <% @notes.each do |note| %>
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= link_to note.title, note %></h2>
          <h6 class="card-subtitle mb-2 text-muted"><%= time_ago_in_words(note.created_at) %> ago</h6>
          <p class="card-text"><%= note.content %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "New Note", new_note_path, class: "btn btn-primary mt-3" %>
</div>
