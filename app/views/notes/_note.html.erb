<div class="card">
  <div class="card-body">
    <h2 class="card-title"><%= link_to note.title, note %></h2>
    <h6 class="card-subtitle mb-2 text-muted"><%= time_ago_in_words(note.created_at) %> ago</h6>
    <p class="card-text"><%= note.content %></p>
    <%= link_to edit_note_path(note), class: "btn btn-outline-primary btn-sm edit", remote:true do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to note_path(note), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger delete btn-sm", remote: true do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  </div>
</div>
